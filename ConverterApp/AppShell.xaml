<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConverterApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ConverterApp.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Distance" Icon="distance_icon">
            <ShellContent ContentTemplate="{DataTemplate local:DistancePage}" Route="DistancePage" />
        </Tab>
        <Tab Title="Weight" Icon="weight_icon">
            <ShellContent ContentTemplate="{DataTemplate local:WeightPage}" Route="WeightPage" />
        </Tab>
    </TabBar>
</Shell>
